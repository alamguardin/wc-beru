{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,

		"allowJs": true,
		"checkJs": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "./dist",
		"rootDir": "./lib"
	},
	// Archivos a incluir en el proceso de tipado (ajusta esta ruta si es diferente)
	"include": ["lib/**/*"]
}
